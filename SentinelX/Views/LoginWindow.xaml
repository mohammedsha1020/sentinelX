<Window x:Class="SentinelX.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SentinelX - Security Login"
        Height="480" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#181F2A"
        Icon="../Resources/logo.png">
    <Grid>
        <Border Background="#232B39" CornerRadius="18" Padding="32" Margin="40" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <Image Source="Resources/logo.png" Width="72" Height="72" Margin="0,0,0,18"/>
                <TextBlock Text="Welcome to SentinelX" FontSize="22" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Sign in to your security dashboard" FontSize="13" Foreground="#B0B8C1" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Username" Foreground="#B0B8C1" Margin="0,0,0,4"/>
                <TextBox x:Name="txtUsername" Height="36" FontSize="15" Background="#232B39" Foreground="#F5F6FA" BorderBrush="#2196F3" BorderThickness="1" Margin="0,0,0,12"/>
                <TextBlock Text="Password" Foreground="#B0B8C1" Margin="0,0,0,4"/>
                <PasswordBox x:Name="txtPassword" Height="36" FontSize="15" Background="#232B39" Foreground="#F5F6FA" BorderBrush="#2196F3" BorderThickness="1" Margin="0,0,0,18"/>
                <Button x:Name="btnLogin" Content="Sign In" Height="40" FontSize="16" Style="{StaticResource AccentButton}" Click="btnLogin_Click"/>
                <TextBlock x:Name="txtStatus" Foreground="#FF3B3B" HorizontalAlignment="Center" Margin="0,14,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 